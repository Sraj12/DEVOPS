pipeline {
    agent none

    stages {
        
        stage('build') {
            agent {
            label "Slave"
            }
            steps {
                sh '''
                echo 'Hello World'
                echo `hostname`

                '''
            }
        }
        stage('test'){
            agent {
                label "docker"
            }
            steps{
                sh '''
                echo "hello welcome"
		echo "hello"
                echo `hostname`
                '''
            }
        }
        
    }
}

